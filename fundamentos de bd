--CREACION DE TABLA DE PRODUCTOS--	
CREATE TABLE PRODUCTOS (ID_PRODUCTOS INTEGER NOT NULL PRIMARY KEY,
	NOMBRE TEXT NOT NULL,
	TIPO TEXT NOT NULL,
	UNIDAD TEXT NOT NULL,
	PRECIO INTEGER NOT NULL
	);
--INSERTAR REGISTROS EN TABLA PRODUCTOS--
