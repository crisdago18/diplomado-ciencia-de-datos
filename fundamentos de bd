--CREACION DE TABLA DE CONDUCTORES--
CREATE TABLE CONDUCTORES (ID_CONDUCTOR INTEGER NOT NULL PRIMARY KEY,
	NOMBRE TEXT NOT NULL,
	TELEFONO INTEGER NOT NULL,
	DIRECCION TEXT NOT NULL
	);
