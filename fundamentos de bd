--CREACION DE TABLA DE CLIENTES--
CREATE TABLE CLIENTES (ID_NIT_CLIENTE INTEGER NOT NULL PRIMARY KEY,
	NOMBRE TEXT NOT NULL,
	DIRECCION TEXT NOT NULL,
	TELEFONO INTEGER NOT NULL,
	CIUDAD TEXT NOT NULL
	);
